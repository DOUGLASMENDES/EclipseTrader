<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<fragment>
   <extension
         point="org.eclipsetrader.core.repositories">
      <repository
            class="org.eclipsetrader.repository.hibernate.HibernateRepository"
            id="org.eclipsetrader.repository.hibernate.derby"
            name="Local"
            scheme="local">
         <param
               name="hibernate.connection.driver_class"
               value="org.apache.derby.jdbc.EmbeddedDriver">
         </param>
         <param
               name="hibernate.dialect"
               value="org.hibernate.dialect.DerbyDialect">
         </param>
      </repository>
   </extension>

</fragment>
