<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin
   id="net.sourceforge.eclipsetrader"
   name="%pluginName"
   version="0.9.2"
   provider-name="%providerName"
   class="net.sourceforge.eclipsetrader.TraderPlugin">

   <runtime>
      <library name="eclipsetrader.jar">
         <export name="*"/>
      </library>
   </runtime>

   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.update.ui"/>
   </requires>
   <extension-point id="dataStore" name="Data Store" schema="schema/portfolioData.exsd"/>
   <extension-point id="chartDataProvider" name="Chart Data Provider" schema="schema/chartDataProvider.exsd"/>
   <extension-point id="chartProvider" name="Chart Provider" schema="schema/chartProvider.exsd"/>
   <extension-point id="chartPlotter" name="Chart Plotter" schema="schema/chartPlotter.exsd"/>
   <extension-point id="dataProvider" name="Data Provider" schema="schema/dataProvider.exsd"/>
   <extension-point id="tradingProvider" name="Trading Provider" schema="schema/tradingProvider.exsd"/>
   <extension-point id="newsProvider" name="News Provider" schema="schema/newsProvider.exsd"/>
   <extension-point id="bookDataProvider" name="Book Data Provider" schema="schema/bookDataProvider.exsd"/>
   <extension
         id="Product"
         point="org.eclipse.core.runtime.products">
      <product
            name="%productName"
            application="net.sourceforge.eclipsetrader.application">
            <property name="windowImages" value="eclipse.gif,eclipse32.gif"/>
            <property name="aboutImage" value="eclipse_lg.gif"/>
            <property name="aboutText" value="%productBlurb"/>
      </product>
   </extension>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
         <application>
             <run
                  class="net.sourceforge.eclipsetrader.internal.Application">
             </run>
         </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            icon="icons/twowaycompare_co.gif"
            class="net.sourceforge.eclipsetrader.internal.TraderPerspective"
            name="Trader"
            id="net.sourceforge.eclipsetrader.TraderPerspective"/>
      <perspective
            icon="icons/news_persp.gif"
            class="net.sourceforge.eclipsetrader.internal.NewsPerspective"
            name="News"
            id="net.sourceforge.eclipsetrader.NewsPerspective"/>
      <perspective
            icon="icons/chart.gif"
            class="net.sourceforge.eclipsetrader.internal.ChartsPerspective"
            name="Charts"
            id="net.sourceforge.eclipsetrader.ChartsPerspective"/>
   </extension>
   <extension
         name="XML Data Store"
         point="net.sourceforge.eclipsetrader.dataStore">
      <provider
            class="net.sourceforge.eclipsetrader.internal.XMLDataStore"
            id="net.sourceforge.eclipsetrader.xml_data_store"/>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="net.sourceforge.eclipsetrader.preferences.GeneralPreferencePage"
            name="%pluginName"
            id="eclipsetrader"/>
      <page
            class="net.sourceforge.eclipsetrader.preferences.StartupPreferencePage"
            name="%Preferences.startup"
            category="eclipsetrader"
            id="eclipsetrader.startup"/>
      <page
            class="net.sourceforge.eclipsetrader.preferences.ProxyPreferencePage"
            name="%Preferences.proxy"
            category="eclipsetrader"
            id="eclipsetrader.proxy"/>
      <page
            class="net.sourceforge.eclipsetrader.preferences.TimingPreferencePage"
            name="%Preferences.timing"
            category="eclipsetrader"
            id="eclipsetrader.timing"/>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="%UpdateActionSet.label"
            visible="true"
            id="org.eclipse.update.ui.softwareUpdates">
         <menu
               label="%UpdateActionSet.menu.label"
               path="help/group.updates"
               id="org.eclipse.update.ui.updateMenu">
            <separator
                  name="group0">
            </separator>
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               label="%UpdateActionSet.configManager.label"
               icon="icons/configs.gif"
               helpContextId="org.eclipse.update.ui.newUpdates"
               class="net.sourceforge.eclipsetrader.internal.ConfigurationManagerAction"
               menubarPath="help/org.eclipse.update.ui.updateMenu/group0"
               id="org.eclipse.update.ui.configManager">
         </action>
         <action
               label="%UpdateActionSet.updates.label"
               icon="icons/usearch_obj.gif"
               helpContextId="org.eclipse.update.ui.newUpdates"
               class="net.sourceforge.eclipsetrader.internal.InstallWizardAction"
               menubarPath="help/org.eclipse.update.ui.updateMenu/group0"
               id="org.eclipse.update.ui.newUpdates">
         </action>
      </actionSet>
      <actionSet
            label="Streaming Control"
            visible="true"
            id="net.sourceforge.eclipsetrader.streaming">
         <action
               toolbarPath="additions"
               label="%Actions.stopStreaming"
               tooltip="%Actions.stopStreaming"
               icon="icons/stop.gif"
               class="net.sourceforge.eclipsetrader.internal.StreamingControl"
               style="push"
               pulldown="false"
               id="net.sourceforge.eclipsetrader.stopStreaming"/>
         <action
               toolbarPath="additions"
               label="%Actions.startStreaming"
               tooltip="%Actions.startStreaming"
               icon="icons/run.gif"
               class="net.sourceforge.eclipsetrader.internal.StreamingControl"
               style="push"
               pulldown="false"
               id="net.sourceforge.eclipsetrader.startStreaming"/>
      </actionSet>
   </extension>

</plugin>
