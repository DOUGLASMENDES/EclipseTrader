<?xml version="1.0" encoding="UTF-8"?>
<project name="help" default="all">

    <target name="javadoc">
        <delete dir="reference/api"/>
        <javadoc destdir="reference/api" 
            access="public" 
            use="true" 
            notree="false" 
            nonavbar="false" 
            noindex="false" 
            splitindex="true" 
            author="true" 
            version="true" 
            nodeprecatedlist="false" 
            nodeprecated="false" 
            packagenames="net.sourceforge.eclipsetrader,net.sourceforge.eclipsetrader.ui.views.charts" 
            sourcefiles="" 
            sourcepath="..\net.sourceforge.eclipsetrader\src;..\net.sourceforge.eclipsetrader.ui.views\src" 
            classpath="..\net.sourceforge.eclipsetrader\bin" 
            doctitle="Plugin Developer Reference">
        </javadoc>
    </target>

    <target name="schemadoc">
        <delete dir="reference/extension-points"/>
        <mkdir dir="reference/extension-points"/>
        <copy todir="reference/extension-points">
            <fileset dir="..\net.sourceforge.eclipsetrader\doc"/>
        </copy>
    </target>

    <target name="all" depends="javadoc,schemadoc">
        <zip zipfile="doc.zip" filesonly="false" update="false">
            <fileset dir="." includes="guide/**/*"/>
            <fileset dir="." includes="tasks/**/*"/>
            <fileset dir="." includes="reference/**/*"/>
        </zip>
    </target>

</project>
