<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipsetrader.ui"
            class="org.eclipsetrader.internal.ui.trading.OrdersView"
            icon="icons/eview16/orders.png"
            id="org.eclipsetrader.ui.views.orders"
            name="Orders">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipsetrader.ui.trade.category"
            name="Trade">
      </category>
      <command
            categoryId="org.eclipse.ui.category.navigate"
            defaultHandler="org.eclipsetrader.internal.ui.trading.TradeHandler"
            description="Trade the selected security"
            id="org.eclipsetrader.ui.file.trade"
            name="Trade">
         <commandParameter
               id="broker"
               name="Broker"
               optional="true">
         </commandParameter>
      </command>
      <command
            defaultHandler="org.eclipsetrader.internal.ui.trading.ResetTriggeredAlerts"
            description="Resets the triggered alerts"
            id="org.eclipsetrader.ui.alerts.reset"
            name="Reset Alerts">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.trade">
         <command
               commandId="org.eclipsetrader.ui.file.trade"
               label="Trade">
            <visibleWhen>
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipsetrader.core.instruments.ISecurity">
                     </adapt>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.tradeWith">
         <menu
               id="org.eclipsetrader.ui.file.trade"
               label="Trade With">
            <separator
                  name="additions">
            </separator>
            <visibleWhen>
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipsetrader.core.instruments.ISecurity">
                     </adapt>
                  </iterate>
               </and>
            </visibleWhen>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="org.eclipsetrader.ui.alerts.reset"
               label="Reset Alerts">
            <visibleWhen>
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipsetrader.core.instruments.ISecurity">
                     </adapt>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.eclipsetrader.internal.ui.trading.AlertPropertyPage"
            id="org.eclipsetrader.ui.trading.propertypages.alerts"
            name="Alerts">
         <enabledWhen>
            <adapt
                  type="org.eclipsetrader.core.instruments.Security">
            </adapt>
         </enabledWhen>
      </page>
      <page
            class="org.eclipsetrader.internal.ui.trading.MarketTradingPage"
            id="org.eclipsetrader.ui.trading.market"
            name="Trading">
         <enabledWhen>
            <adapt
                  type="org.eclipsetrader.core.markets.IMarket">
            </adapt>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.propertyPages">
      <page
            class="org.eclipsetrader.internal.ui.trading.TargetPricePropertyPage"
            id="org.eclipsetrader.ui.trading.alertpropertypages.targetprice"
            name="Target Price">
         <enabledWhen>
            <instanceof
                  value="org.eclipsetrader.core.internal.trading.TargetPrice">
            </instanceof>
         </enabledWhen>
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="org.eclipsetrader.internal.ui.trading.EarlyStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipsetrader.ui.trading.alerts"
            name="Alerts">
      </category>
      <wizard
            category="org.eclipsetrader.ui.trading.alerts"
            class="org.eclipsetrader.internal.ui.trading.TargetPriceWizard"
            icon="icons/eview16/bell.png"
            id="org.eclipsetrader.ui.trading.targetprice.alert"
            name="Target Price">
         <description>
            Create a new Target Price alert.
         </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.decorators">
      <decorator
            class="org.eclipsetrader.internal.ui.trading.WatchlistAlertDecorator"
            id="org.eclipsetrader.ui.alerts.decorator"
            label="Alert Decorator"
            lightweight="true"
            state="true">
         <enablement>
            <objectClass
                  name="org.eclipsetrader.ui.internal.views.WatchListViewItem">
            </objectClass>
         </enablement>
      </decorator>
   </extension>
   <extension
         point="org.eclipsetrader.ui.viewLabelProviders">
      <viewContribution
            id="org.eclipsetrader.ui.orders.viewContribution"
            targetID="org.eclipsetrader.ui.views.orders">
         <provider
               class="org.eclipsetrader.ui.trading.AccountColumn"
               id="org.eclipsetrader.ui.trading.orders.account"
               name="Account">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.AveragePriceColumn"
               id="org.eclipsetrader.ui.trading.orders.averageprice"
               name="Avg. Price"
               orientation="right">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.BrokerMessageColumn"
               id="org.eclipsetrader.ui.trading.orders.message"
               name="Message">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.BrokerNameColumn"
               id="org.eclipsetrader.ui.trading.orders.broker"
               name="Broker">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.DateTimeColumn"
               id="org.eclipsetrader.ui.trading.orders.datetime"
               name="Date / Time">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.ExpireDateColumn"
               id="org.eclipsetrader.ui.trading.orders.expire"
               name="Expire">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.FilledQuantityColumn"
               id="org.eclipsetrader.ui.trading.orders.filledqty"
               name="Filled Q.ty"
               orientation="right">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.OrderIdColumn"
               id="org.eclipsetrader.ui.trading.orders.orderid"
               name="Id">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.PriceColumn"
               id="org.eclipsetrader.ui.trading.orders.price"
               name="Price"
               orientation="right">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.QuantityColumn"
               id="org.eclipsetrader.ui.trading.orders.qty"
               name="Q.ty">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.ReferenceColumn"
               id="org.eclipsetrader.ui.trading.orders.reference"
               name="Reference">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.RouteColumn"
               id="org.eclipsetrader.ui.trading.orders.route"
               name="Route">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.SecurityNameColumn"
               id="org.eclipsetrader.ui.trading.orders.security"
               name="Security">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.SideColumn"
               id="org.eclipsetrader.ui.trading.orders.side"
               name="Side">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.StatusColumn"
               id="org.eclipsetrader.ui.trading.orders.status"
               name="Status">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.StopPriceColumn"
               id="org.eclipsetrader.ui.trading.orders.stopprice"
               name="Stop Price"
               orientation="right">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.SymbolColumn"
               id="org.eclipsetrader.ui.trading.orders.symbol"
               name="Symbol">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.TypeColumn"
               id="org.eclipsetrader.ui.trading.orders.type"
               name="Type">
         </provider>
         <provider
               class="org.eclipsetrader.ui.trading.ValidityColumn"
               id="org.eclipsetrader.ui.trading.orders.validity"
               name="Validity">
         </provider>
      </viewContribution>
   </extension>

</plugin>
