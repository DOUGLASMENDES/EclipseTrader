<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="org.eclipsetrader.ui"
            class="org.eclipsetrader.internal.ui.trading.OrdersView"
            icon="icons/eview16/orders.png"
            id="org.eclipsetrader.ui.views.orders"
            name="Orders">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipsetrader.ui.trade.category"
            name="Trade">
      </category>
      <command
            categoryId="org.eclipse.ui.category.navigate"
            defaultHandler="org.eclipsetrader.internal.ui.trading.TradeHandler"
            description="Trade the selected security"
            id="org.eclipsetrader.ui.file.trade"
            name="Trade">
         <commandParameter
               id="broker"
               name="Broker"
               optional="true">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.trade">
         <command
               commandId="org.eclipsetrader.ui.file.trade"
               label="Trade">
            <visibleWhen>
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipsetrader.core.instruments.ISecurity">
                     </adapt>
                  </iterate>
               </and>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.tradeWith">
         <menu
               id="org.eclipsetrader.ui.file.trade"
               label="Trade With">
            <separator
                  name="additions">
            </separator>
            <visibleWhen>
               <and>
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipsetrader.core.instruments.ISecurity">
                     </adapt>
                  </iterate>
               </and>
            </visibleWhen>
         </menu>
      </menuContribution>
   </extension>

</plugin>
